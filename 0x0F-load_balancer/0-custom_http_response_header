#!/usr/bin/env bash
# This script configures Nginx to include a custom HTTP header X-Served-By in its responses with the server's hostname

# Update package index and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Define the custom Nginx configuration
custom_config="\
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    location / {
        add_header X-Served-By \$hostname;
        proxy_pass http://localhost:8080;  # Adjust as needed based on your application configuration
    }
}
"

# Create a custom configuration file for Nginx
echo "$custom_config" | sudo tee /etc/nginx/sites-available/custom_header > /dev/null

# Enable the custom configuration by creating a symbolic link
sudo ln -s /etc/nginx/sites-available/custom_header /etc/nginx/sites-enabled/

# Test Nginx configuration and restart Nginx
sudo nginx -t && sudo systemctl restart nginx
